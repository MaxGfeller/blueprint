<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/style.css" media="screen" rel="stylesheet" type="text/css" />
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">blueprint</a> / this is a blog</h1>
    </div>
    <div id="posts">
      <% posts.forEach(function(post) { %>
        <div class="post">
          <h1><a href="/<%- post.slug%>/" title="<%- post.title %>"><%- post.title %></a></h1>
          <p class="meta"><%- post.created_at_nice %> | <%- post.comment_count %> comments</p>
          <%- post.content %>
        </div>
      <% }); %>
    </div>
    <div id="footer">
      <p><a href="/admin/login/" title="login">login</a></p>
    </div>
  </div>
</body>
</html>